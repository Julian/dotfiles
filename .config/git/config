[user]
    email = Julian@GrayVines.com
    name = Julian Berman

[color]
    ui = true

[diff]
    algorithm = histogram
    tool = vimdiff

[merge]
    conflictstyle = diff3
    log = true
    tool = vimdiff

[difftool]
    prompt = false

[alias]
    bm = branch --merged
    bn = branch --no-merged
    ci = commit
    cia = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
    cm = commit -m
    co = checkout
    di = diff
    dc = diff --cached
    dd = diff --diff-algorithm=default
    df = diff --name-only
    ff = merge --ff-only
    noff = merge --no-ff
    st = status
    x = commit -m
    amend = commit --amend
    authors = shortlog -sn
    ctags = "!.git/hooks/ctags"

    # Fancy logging.
    #   h = head
    #   hp = head with patch
    #   r = recent commits, only current branch
    #   ra = recent commits, all reachable refs
    #   l = all commits, only current branch
    #   la = all commits, all reachable refs

    head = !git l -1
    h = !git head
    hp = "!. $XDG_CONFIG_HOME/git/helpers && show_git_head"
    r = !git l -30
    ra = !git r --all
    l = "!. $XDG_CONFIG_HOME/git/helpers && pretty_git_log"
    la = !git l --all

[push]
    default = simple
