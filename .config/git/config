[user]
    email = Julian@GrayVines.com
    name = Julian Berman

[color]
    ui = true

[commit]
    gpgsign = false
    verbose = 1

[diff]
    algorithm = histogram
    tool = vimdiff

[difftool]
    prompt = false

[gpg]
    program = gpg2

[merge]
    conflictstyle = diff3
    defaultToUpstream = true
    log = 50
    tool = vimdiff

[push]
    default = simple
    followTags = true

[rebase]
    autostash = true

[rerere]
    enabled = true

[svn]
    rmdir = true

[alias]
    # Existing operations
    b = branch
    bm = branch --merged
    bn = branch --no-merged
    br = branch --remote
    brm = branch --remote --merged
    brn = branch --remote --no-merged

    c = clone --recursive
    co = checkout
    cp = cherry-pick
    rmb = push --delete origin
    tip = rebase @{u}

    x = commit --message
    ci = commit
    cim = commit --amend -m

    d = diff --ignore-all-space --ignore-blank-lines --word-diff=color --find-renames
    dc = diff --ignore-all-space --ignore-blank-lines --word-diff=color --find-renames --cached
    di = diff
    dd = diff --diff-algorithm=default
    df = diff --name-only

    g = log -m -G

    ff = merge --ff-only
    noff = merge --no-ff

    s = status --short
    st = status

    good = bisect good
    bad = bisect bad

    # New operations
    up = "!git remote update --prune && git merge --ff-only @{u} && git submodule update"
    cia = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
    inc = !sh -c 'git cia && git stash --include-untracked && $@ && git stash pop'
    changes = !sh -c 'git d HEAD...$1' -
    authors = shortlog --summary --numbered
    ctags = "!.git/hooks/ctags"
    fork = !sh -c 'git remote add $1 https://github.com/$1/$(basename $(git remote show -n origin | grep Fetch | cut -d: -f2-)) && git fetch $1' -
    issues = !sh -c 'git log --oneline $@ | egrep -o [A-Z]+-[0-9]+ | sort | uniq' -
    stale = "!git for-each-ref --sort=committerdate --shell --format=\"git log -1 --pretty=format:'%Cgreen%ci %Cred%cr%Creset%d' %(refname)\" refs/remotes/origin/ | sh"

    # Fancy logging.
    #   h = head
    #   hp = head with patch
    #   r = recent commits, only current branch
    #   ra = recent commits, all reachable refs
    #   l = all commits, only current branch
    #   la = all commits, all reachable refs

    ch = !git r HEAD..
    head = !git l -1
    h = !git head
    hp = "!. $XDG_CONFIG_HOME/git/helpers && show_git_head"
    r = !git l -30
    ra = !git r --all
    l = "!. $XDG_CONFIG_HOME/git/helpers && pretty_git_log"
    la = !git l --all
    q = !git r @{u}..

[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
    insteadOf = "github:"

[url "git@gist.github.com:"]
    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
    insteadOf = "gist:"
